@elements.card({
  variant: 'mee',
  classes: 'hover:shadow-lg cursor-pointer space-y-4 lg:space-y-6 transition h-full flex flex-col'
})
  <header class="flex flex-row justify-between space-x-4">
    <h3 class="font-bold text-xl lg:text-2xl">
      {{ school.name }}
    </h3>

    @!shared.avatar({
      attachment: school.picture,
      alt: 'Image de l\'Ã©cole ' + school.name,
      variant: 'associations',
      placeholder: false,
      size: 'w-auto h-20',
    })
  </header>

  @if(school.overview)
    <p class="text-justify lg:text-lg">{{ excerpt(school.overview, 150) }}</p>
  @end
  <ul class="flex-grow flex flex-row gap-2 flex-wrap content-end">
    @elements.chip()
      <span class="font-bold">
        {{ school.$extras.associations_count }}
      </span>
      @if(school.$extras.associations_count <= 1)
        association
      @else
        associations
      @end
    @end
    @elements.chip()
      <span class="font-bold">
        {{ school.$extras.profiles_count }}
      </span>
      @if(school.$extras.profiles_count <= 1)
        profil
      @else
        profils
      @end
    @end
  </ul>
@end
