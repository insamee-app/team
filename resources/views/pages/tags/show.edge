@layout('layouts/app')
@set('title', tag.name)

@section('content')
  @shared.article()
    @slot('header')
      @if(up.targetIncludes('[layout-main]'))
        @shared.subtitle({
          controller: 'TagsController',
          variant: 'associations',
        })
          Tags
        @end

        @shared.title()
          {{ tag.name }}

          @slot('actions')
            @can('TagPolicy.update')
              @elements.button({
                variant: 'associations',
                fill: true
              })
                @slot('main', className)
                  @elements.anchor({
                    href: route('TagsController.edit', { id: tag.id }),
                    class: className,
                    target: '[layout-main]'
                  })
                    Modifier
                  @end
                @end
              @end
            @end
          @end
        @end
      @endif
    @end

    @if(up.targetIncludes('[layout-main]'))
      @!shared.delete({
        item: tag,
        policy: 'TagPolicy',
        controller: 'TagsController',
        end: "le tag"
      })
    @endif

    @shared.subSection()
      @slot('title')
        Associations associ√©s
      @end

      @if(up.targetIncludes('[layout-main]') || up.targetIncludes('[layout-list]'))
        @shared.list({
          items: associations,
          variant: 'associations',
        })
          @slot('main', association)
            @elements.anchor({
              href: route('AssociationsController.edit', { id: association.id }),
              class: 'block rounded-2xl focus-within:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-associations-primary-base'
            })
              @!associations.card({
                association,
              })
            @end
          @end
          @slot('pagination', scope)
            @!shared.pagination({
              data: associations,
              variant: 'associations',
              className: scope.className,
            })
          @end
        @end
      @endif
    @end
  @end
@end
